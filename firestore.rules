
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      // For now, any signed-in user is considered an admin.
      // In a production environment, you should implement a more robust role check.
      return isSignedIn();
    }

    // Rules for the user registrations collection
    match /user_registrations/{registrationId} {
      // Allow creation and read by anyone (public registration form needs read for CPF check)
      allow create, read: if true;
      
      // Only admins can update, or delete user registrations
      allow update, delete: if isAdmin();
    }
    
    // Admins can list all registered users
    match /user_registrations/{registrationId} {
        allow list: if isAdmin();
    }

    // Rules for the winners collection
    match /winners/{winnerId} {
        // Anyone can read the winners list
        allow read, list: if true;
        
        // Only admins can create, update or delete winner entries
        allow create, update, delete: if isAdmin();
    }

    // Rules for the stats collection
    match /stats/{statId} {
        // Anyone can read stats
        allow read: if true;

        // Only admins can update stats
        allow write: if isAdmin();
    }
    
    // Rules for user profiles
    match /users/{userId} {
        allow read, write: if request.auth.uid == userId;
    }
  }
}
