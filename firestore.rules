
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /registered_users/{userId} {
      // Allow anyone to create a user registration
      allow create: if true;
      
      // Allow only authenticated admins to read, update, or delete
      allow read, update, delete: if request.auth != null; 
    }

    match /winners/{winnerId} {
      // Allow anyone to read the list of winners
      allow read: if true;
      
      // Allow only authenticated admins to add new winners
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null;
    }
    
    match /stats/raffle {
      // Allow anyone to read raffle stats
      allow get: if true;

      // Allow only admins to update the raffle count
      allow write: if request.auth != null;
    }
  }
}
